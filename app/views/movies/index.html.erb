<%#= render 'index_header.html.erb' %>

<%#= render 'index_table.html.erb' %>

<%#= render 'index_table.html.erb' %>

<%= javascript_pack_tag 'rate' %>

<hr>

<h3>Script</h3>

<h4>Movies (in list format)</h4>

<div class="row">
  <div id='rate'>


    <ul id="movie-list">
      <template v-for="movie in movies_jsn">
        <li>id: {{ movie.id }}</li>
        <li>title: {{ movie.title }}</li>
        <li><em>text: {{ movie.summary }}</em></li>
        <br>
      </template>
    </ul>

    <table id="movies-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Summary</th>
          <th>Category_id</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>

        <template v-for="movie in movies_jsn" v-bind:id="movie.ID">
          <tr>
            <td>{{ movie.id }}</td>
            <td>{{ movie.title }}</td>
            <td>{{ movie.summary }}</td>
            <td>{{ movie.category_id }}</td>
            <td v-bind:id="`show-${movie.id}`"><button type="button" class="btn btn-primary">Show</button></td>
            <td v-bind:id="`edit-${movie.id}`"><button type="button" class="btn btn-warning">Edit</button></td>
            <td v-bind:id="`destroy-${movie.id}`"><button type="button" class="btn btn-danger">Destroy</button></td>
          </tr>
        </template>
      </tbody>
    </table>



  </div>
</div>

<hr>
