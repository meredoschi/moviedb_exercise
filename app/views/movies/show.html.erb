<p id="notice"><%= notice %></p>

<div class="container">
  <p>
    <strong>Title:</strong>
    <%= @movie.title %>
  </p>

  <p>
    <strong>Summary:</strong>
    <%= @movie.summary %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @movie.category_name %>
  </p>

</div>

<div class="container">

  <% if can? :update, Movie %>

    <%= link_to 'Edit', edit_movie_path(@movie), class: 'btn btn-warning' %> |

  <% end %>

  <%= link_to 'Back', movies_path, class: 'btn btn-info' %>

</div>
