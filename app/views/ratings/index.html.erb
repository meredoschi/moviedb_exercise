<p id="notice"><%= notice %></p>

<h1>Ratings</h1>

<table class="table table-striped" id="ratings-table">
  <thead class="thead-dark">
    <th>User</th>
    <th>Movie</th>
    <th>Stars</th>

      <th colspan="3"></th>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.user.email %></td>
        <td><%= link_to rating.movie.title, rating.movie %></td>
        <td><%= rating.stars %></td>
        <td><%= link_to 'Show', rating, class: 'btn btn-info' %></td>
        <td>

          <% if can? :destroy, Rating %>

          <%= link_to 'Remove', rating, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>

          <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate(@ratings) %>

<hr>

<%= link_to 'Back to the homepage', root_path, class: 'btn btn-info' %>
